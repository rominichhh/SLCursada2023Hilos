<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estoy escuchando.."
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/tvSuena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="5dp"
        tools:text = "Musica Sonando"
        android:textSize="18sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descargando..."
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/tvDescarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="5dp"
        tools:text = "Informacion Descarga"
        android:textSize="18sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <Button
            android:id="@+id/btnSonar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Iniciar Reproduccion"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnDescarga"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Iniciar Descarga"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>